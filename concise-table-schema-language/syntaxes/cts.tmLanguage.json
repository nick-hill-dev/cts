{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Concise Table Schema",
	"scopeName": "source.cts",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#optionSets"
		},
		{
			"include": "#lookups"
		},
		{
			"include": "#annotations"
		},
		{
			"include": "#data"
		},
		{
			"include": "#csv"
		},
		{
			"include": "#tables"
		},
		{
			"include": "#fields"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.cts",
					"match": "^\\s*//(.*)"
				}
			]
		},
		"optionSets": {
			"patterns": [
				{
					"name": "keyword.cts",
					"match": "^(\\w+)(?=\\?)"
				}
			]
		},
		"lookups": {
			"patterns": [
				{
					"name": "keyword.cts",
					"match": "^(\\w+)(?=\\&)"
				}
			]
		},
		"annotations": {
			"patterns": [
				{
					"match": "^(\\w+)(?=@)",
					"name": "keyword.cts"
				},
				{
					"match": "^(\\w+\\.\\w+)(?=@)",
					"name": "keyword.cts"
				},
				{
					"match": "^(\\w+\\.\\w+\\.\\w+)(?=@)",
					"name": "keyword.cts"
				},
				{
					"begin": "\\@",
					"end": "$",
					"name": "source.json",
					"contentName": "meta.structure.dictionary.json",
					"patterns": [
						{
							"include": "source.json"
						}
					]
				}
			]
		},
		"data": {
			"patterns": [
				{
					"name": "data.cts",
					"match": "^(\\w+)(\\+)(\\s*)(.*?)(\\|)(\\w*)",
					"captures": {
						"1": {
							"name": "keyword.cts"
						},
						"2": {
							"name": "punctuation.definition.separator.cts"
						},
						"3": {
							"name": "punctuation.definition.separator.cts"
						},
						"4": {
							"name": "csv.line.cts",
							"patterns": [
								{
									"name": "comma.cts",
									"match": ","
								},
								{
									"name": "variable.parameter.cts",
									"match": "\\[.+\\]"
								},
								{
									"name": "string.quoted.cts",
									"match": "[^,]+"
								}
							]
						},
						"5": {
							"name": "punctuation.definition.separator.cts"
						},
						"6": {
							"name": "variable.parameter.cts"
						}
					}
				}
			]
		},
		"tables": {
			"patterns": [
				{
					"name": "keyword.cts",
					"match": "^(\\w+)(?=\\>)"
				}
			]
		},
		"fields": {
			"patterns": [
				{
					"name": "constant.numeric.cts",
					"match": "(\\w+\\~\\w+\\.\\w+)"
				},
				{
					"name": "variable.name.cts",
					"match": "(\\w?\\~\\w+)"
				},
				{
					"name": "constant.numeric.cts",
					"match": "\\{?(\\w+\\.\\w+)"
				},
				{
					"name": "variable.name.cts",
					"match": "(\\w+\\%)"
				},
				{
					"name": "variable.name.cts",
					"match": "(\\w+\\*)"
				},
				{
					"name": "variable.name.cts",
					"match": "(\\w+\\#)"
				},
				{
					"name": "variable.name.cts",
					"match": "(\\w+\\$)"
				},
				{
					"name": "variable.name.cts",
					"match": "(\\w+)"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"match": "\"(\\\\.|[^\"])*\"",
					"name": "string.quoted.double.cts"
				}
			]
		}
	}
}